    <div id="map"></div>
    <script>
		var iconBase =
            'https://developers.google.com/maps/documentation/javascript/examples/full/images/';

        var icons = {
          parking: {
            icon: iconBase + 'parking_lot_maps.png'
          },
          library: {
            icon: iconBase + 'library_maps.png'
          },
          info: {
            icon: iconBase + 'info-i_maps.png'
          }
        };


      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 40.7128, lng: -74.0060},
          zoom: 10.5
        });

				/*var marker = new google.maps.Marker({
				    position: new google.maps.LatLng(40.7128,-74.0060),
				    title:"Hello World!"
				});
				marker.setMap(map);*/

				var features = [
	{
		position: new google.maps.LatLng(40.8, -74.0060),
		type: 'info'
	}, {
		position: new google.maps.LatLng(40.6, -74.0060),
		type: 'info'
	}
];

// Create markers.
for (var i = 0; i < features.length; i++) {
	var marker = new google.maps.Marker({
		position: features[i].position,
		icon: icons[features[i].type].icon,
		map: map
	});
};

marker.setMap(map);

}

    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBrhDK19qy0m3Vfg7CGPwF47c5RgmbmcA0&callback=initMap"
